{
	"info": {
		"_postman_id": "akshayapatra-auth-api",
		"name": "Akshayapatra Authentication API",
		"description": "Collection for testing the Akshayapatra Authentication API endpoints including email/password, phone/OTP, and Google OAuth authentication",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_exporter_id": "akshayapatra-auth-api"
	},
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Signup",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"securepassword123\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/auth/signup",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"auth",
								"signup"
							]
						},
						"description": "Register a new user with email and password"
					},
					"response": []
				},
				{
					"name": "Login",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"securepassword123\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/auth/login",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"auth",
								"login"
							]
						},
						"description": "Authenticate user with email and password"
					},
					"response": []
				},
				{
					"name": "Logout",
					"request": {
						"method": "POST",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/auth/logout",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"auth",
								"logout"
							]
						},
						"description": "Logout the current user"
					},
					"response": []
				},
				{
					"name": "Confirm Email",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/auth/confirm?token_hash={{tokenHash}}&type=signup",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"auth",
								"confirm"
							],
							"query": [
								{
									"key": "token_hash",
									"value": "{{tokenHash}}"
								},
								{
									"key": "type",
									"value": "signup"
								}
							]
						},
						"description": "Confirm email address using token from confirmation email"
					},
					"response": []
				}
			],
			"description": "User authentication operations"
		},
