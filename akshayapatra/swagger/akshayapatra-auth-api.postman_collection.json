		{
			"name": "Google OAuth",
			"item": [
				{
					"name": "Initiate Google OAuth",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"mode\": \"login\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/auth/google",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"auth",
								"google"
							]
						},
						"description": "Initiate Google OAuth authentication flow"
					},
					"response": []
				},
				{
					"name": "OAuth Callback",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/auth/callback?code={{authCode}}&next=/dashboard",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"auth",
								"callback"
							],
							"query": [
								{
									"key": "code",
									"value": "{{authCode}}"
								},
								{
									"key": "next",
									"value": "/dashboard"
								}
							]
						},
						"description": "Handle OAuth callback from Google"
					},
					"response": []
				}
			],
			"description": "Google OAuth authentication operations"
		},
